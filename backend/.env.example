# Environment Variables Template
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql+asyncpg://username@localhost:5432/care_platform

# JWT Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Storage
STORAGE_PROVIDER=local  # Change to 's3' for production
LOCAL_STORAGE_PATH=./storage

# AWS S3 Configuration (only needed when STORAGE_PROVIDER=s3)
# Get these from AWS Console -> IAM -> Users -> Security Credentials
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Transcription (requires openai-whisper: pip install openai-whisper)
# Whisper is automatically loaded if installed

# Email Configuration
# For Gmail: Use App Password (https://support.google.com/accounts/answer/185833)
# For SendGrid: SMTP_HOST=smtp.sendgrid.net, SMTP_PORT=587, SMTP_USER=apikey, SMTP_PASSWORD=your-sendgrid-api-key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@careplatform.com

# Scheduler (Set to 'false' to disable automated reminders in development)
ENABLE_SCHEDULER=true

# Server
HOST=0.0.0.0
PORT=8000
